<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>姓名</th>
      <th>Email</th>
      <th>電話</th>
      <th>地址</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.mail %></td>
        <td><%= user.tel %></td>
        <td><%= user.address %></td>
        <td><%= link_to '顯示', user %></td>
        <td><%= link_to '修改', edit_user_path(user) %></td>
        <td><%= link_to '刪除', user, method: :delete, data: { confirm: '確定刪除此使用者?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @users %>

<%= link_to '新增使用者', new_user_path %>
